<!--                     attrs="{'invisible': [('gender', '!=', 'male')]}"-->
<!--                    >-->

<!--                        <field name="army_status"/>-->
<!--                        <field name="postponed_to_date" attrs="{'invisible': [('army_status', '!=', 'postponed')]}"/>-->
<!--                    </group>-->

<!--                </xpath>-->


            </field>
        </record>
    </data>
</odoo>
